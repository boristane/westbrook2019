{
  "extends": "tslint:recommended",
  "rules": {
    "forin": false,
    "max-line-length": {
      "options": [
        240
      ]
    },
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-snake-case"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "member-access": [
      false,
      "check-parameter-property"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}